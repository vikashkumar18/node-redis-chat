extends ./layout
block content
	.row 
		.col-sm-8.col-sm-offset-2
			.row
				.col-sm-12
					form(method='post' )
						-if(message.length > 0){
						div.alert.alert-danger #{message}
						-}
						input(type="hidden" name="_csrf" value="#{token}")
						.form-group
							label(for='username') Username
							input#username.form-control(type='text', placeholder='username', name='username')
						.form-group
							label(for='password') Password
							input#password.form-control(type='password', placeholder='password', name='password')
						button.btn.btn-primary.btn-block Login
			.row.top-margin
				.col-sm-6
					button.btn.btn-block.facebook
						i.fa.fa-facebook
						|  Facebook
				.col-sm-6
					button.btn.btn-block.google
						i.fa.fa-google-plus
						|  Google